html
    head
        include head.pug
    body
        .page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
            .wrapper.wrapper--w680
                .card.card-4
                    .card-body
                        h2.title Login Form
                        form(action='/login/', method='POST', role='form')
                            -if (messages.info)
                                .alert
                                    span.closebtn(onclick="this.parentElement.style.display='none';") &times;
                                    i.icon.fa.fa-ban
                                    | Peringatan!
                                    |  #{messages.info}
                            .input-group
                                label.label Username
                                input.input--style-4(type='text', name='username')
                            .input-group
                                label.label Password
                                input.input--style-4(type='password', name='password')
                            .input-group
                                .p-t-15
                                    button.btn.btn--radius-2.btn--blue(type='submit') Submit
                            .input-group
                                label.label Belum Punya akun ?
                                    a(href="/regis") daftar disini
